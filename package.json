{
    "name": "@xboxreplay/express-ugc-proxy",
    "description": "Express middleware to proxy user-generated content to another host and embed them on social media platforms.",
    "version": "0.1.0",
    "keywords": [
        "xboxreplay",
        "xboxlive",
        "express",
        "proxy",
        "ugc"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/XboxReplay/express-ugc-proxy"
    },
    "license": "MIT",
    "types": "./index.d.ts",
    "main": "./dist/index.js",
    "author": {
        "name": "Alexis Bize",
        "email": "alexis.bize@gmail.com"
    },
    "scripts": {
        "build": "npm run clean && ./node_modules/.bin/tsc",
        "clean": "rm -rf ./dist",
        "prepublishOnly": "npm run test && npm run build",
        "test": " ./node_modules/.bin/jest --runInBand",
        "watch": "npm run clean && ./node_modules/.bin/tsc-watch"
    },
    "dependencies": {
        "@types/http-proxy-middleware": "^0.19.2",
        "@xboxreplay/xboxlive-api": "^2.1.1",
        "express": "^4.17.1",
        "express-http-proxy": "^1.5.1",
        "express-request-proxy": "^2.2.2",
        "http-proxy-middleware": "^0.19.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.0",
        "@types/express-http-proxy": "^1.5.11",
        "@types/jest": "^24.0.15",
        "@types/node": "^12.0.10",
        "tsc-watch": "^2.2.1",
        "typescript": "^3.5.2",
        "jest": "^24.8.0",
        "ts-jest": "^24.0.2"
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "testRegex": "__tests__/.*\\.(ts|tsx|js)$"
    }
}
